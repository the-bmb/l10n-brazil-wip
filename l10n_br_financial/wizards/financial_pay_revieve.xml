<odoo>
<data>

    <record model="ir.ui.view" id="financial_pay_revieve_form_view">
        <field name="name">financial.pay_revieve.form (in financial)</field>
        <field name="model">financial.pay_revieve</field>
        <field name="arch" type="xml">
            <form string="Financial Pay_revieve">
                <!-- TODO -->
                <group>
                    <group>
                        <field name="ammount_paid" string="Ammount Paid"/>
                        <field name="desconto" string="Discount"/>
                        <field name="multa" string="Delay Fee"/>
                        <field name="juros" string="Interest"/>
                    </group>

                    <group>
                        <field name="currency_id" string="Currency id"/>
                        <field name="payment_mode" string="Payment Mode"/>
                        <field name="payment_date" string="Payment Date"/>
                        <field name="credit_debit_date" string="Credit Debit Date"/>
                    </group>
                </group>
                <footer>
                    <button name='doit'
                        string='OK'
                        class='btn-primary oe_highlight'
                        type='object'/>
                    or
                    <button string='Cancel'
                        class='btn-default oe_link'
                        special='cancel'/>
                </footer>
            </form>
        </field>
    </record>

    <record model="ir.actions.act_window" id="financial_pay_revieve_act_window">
        <field name="name">Financial Pay_revieve</field> <!-- TODO -->
        <field name="res_model">financial.pay_revieve</field>
        <field name="view_mode">form</field>
        <field name="context">{}</field>
        <field name="target">new</field>
    </record>



</data>
</odoo>

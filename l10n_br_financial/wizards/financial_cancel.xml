<odoo>
<data>

    <record model="ir.ui.view" id="financial_cancel_form_view">
        <field name="name">financial.cancel.form (in financial)</field>
        <field name="model">financial.cancel</field>
        <field name="arch" type="xml">
            <form string="Financial Cancel">
                <!-- TODO -->
                <group>
                    <field name="reason"/>
                </group>
                <footer>
                    <button name='doit'
                        string='OK'
                        class='btn-primary oe_highlight'
                        type='object'/>
                    or
                    <button string='Cancel'
                        class='btn-default oe_link'
                        special='cancel'/>
                </footer>
            </form>
        </field>
    </record>

    <record model="ir.actions.act_window" id="financial_cancel_act_window">
        <field name="name">Cancel</field> <!-- TODO -->
        <field name="res_model">financial.cancel</field>
        <field name="view_mode">form</field>
        <field name="context">{}</field>
        <field name="target">new</field>
    </record>

    <record model="ir.values" id="financial_cancel_act_multi">
        <field name="name">Cancel</field>
        <field name="key2">client_action_multi</field>
        <field name="value" eval="'ir.actions.act_window,' +str(ref('financial_cancel_act_window'))" />
        <field name="model">financial.move</field>
    </record>

